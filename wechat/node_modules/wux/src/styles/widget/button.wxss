@import "../base/fn.wxss";

.wux-speed-dial {
    position: fixed;
    z-index: 1500;
}

.wux-speed-dial__action {
    position: absolute;
    right: 15px;
    bottom: 15px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    z-index: 1500;
    background-color: #E40A5D;
    color: #fff;
    overflow: hidden;
    transition-duration: .3s;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
    right: 0;
    bottom: 0;
    position: relative;
}

.wux-speed-dial__action--hover {
    transition-duration: 0s;
    opacity: .8 !important;
}

.wux-speed-dial__icon {
	display: inline-block;
	width: 20px;
	height: 20px;
	font-size: 20px;
	line-height: 1;
}

.wux-speed-dial__text {
    &:extend(.wux-speed-dial__icon);
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: contain;
    transition: transform 150ms cubic-bezier(0.4, 0, 1, 1);
}

.wux-speed-dial__buttons {
    position: absolute;
    width: 40px;
    left: 50%;
    margin-left: -20px;
    bottom: 100%;
    margin-bottom: 16px;
    display: flex;
    flex-direction: column-reverse;
    visibility: hidden;
    pointer-events: none;
}

.wux-speed-dial__button {
    width: 40px;
    height: 40px;
    opacity: 0;
    color: #fff;
    border-radius: 50%;
    position: relative;
    z-index: 1;
    overflow: visible;
    background-color: #E40A5D;
    transition-duration: .3s;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translate3d(0,8px,0) scale(.3);
    transform-origin: center bottom;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);

    + .wux-speed-dial__button {
        margin-bottom: 16px;
    }

    &[data-label]:after {
        content: attr(data-label);
        position: absolute;
        top: 50%;
        padding: 4px 10px;
        font-size: 12px;
        background: rgba(0, 0, 0, 0.4);
        border-radius: 3px;
        color: rgba(255, 255, 255, 0.8);
        pointer-events: none;
        white-space: nowrap;
        opacity: 0;
        box-sizing: border-box;
        transform: translate3d(0, -50%, 0);
        transition: all 0.3s;
    }
}

.wux-speed-dial__button--hover {
    transition-duration: 0s;
    opacity: .8 !important;
}

.wux-speed-dial--opened {
    .wux-speed-dial__text {
        transform: scale(1) rotate(135deg);
    }

    .wux-speed-dial__buttons {
        visibility: visible;
        pointer-events: auto;
    }

    .wux-speed-dial__button {
        opacity: 1;
        transform: translate3d(0,0,0) scaleY(1);
        
        &[data-label]:after {
            opacity: 1;
        }

        &:nth-child(2) {
            transition-delay: 50ms;
        }

        &:nth-child(3) {
            transition-delay: .1s;
        }

        &:nth-child(4) {
            transition-delay: 150ms;
        }

        &:nth-child(5) {
            transition-delay: .2s;
        }

        &:nth-child(6) {
            transition-delay: 250ms;
        }
    }
}

.wux-speed-dial--top-left {
    left: 15px;
    top: 15px;
}

.wux-speed-dial--top-right {
    right: 15px;
    top: 15px;
}

.wux-speed-dial--bottom-left {
    left: 15px;
    bottom: 15px;
}

.wux-speed-dial--bottom-right {
    right: 15px;
    bottom: 15px;
}

.wux-speed-dial--top-left .wux-speed-dial__button[data-label]:after, 
.wux-speed-dial--bottom-left .wux-speed-dial__button[data-label]:after {
    left: 60px;
}

.wux-speed-dial--top-right .wux-speed-dial__button[data-label]:after, 
.wux-speed-dial--bottom-right .wux-speed-dial__button[data-label]:after {
    right: 60px;
}

.wux-speed-dial--top-left .wux-speed-dial__buttons, 
.wux-speed-dial--top-right .wux-speed-dial__buttons {
    bottom: inherit;
    top: 100%;
    margin-bottom: 0;
    margin-top: 16px;
}