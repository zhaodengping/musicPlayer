@import "../base/fn.wxss";

.wux-rater {
	display: block;
    margin: 0;
    padding: 0;
	line-height: normal;
    vertical-align: middle;
    font-weight: 400;
    font-style: normal;
	.clearfix();
}

.wux-rater__box {
	position: relative;
	display: block;
	float: left;
	text-align: center;
	cursor: pointer;
	color: #ccc;
	transition: color .3s ease;

	&:last-child {
		padding-right: 2px !important;
		margin-right: 0px !important;
	}
}

.wux-rater__box--disabled {
	color: #ccc !important;
	cursor: not-allowed;
}

.wux-rater__inner {
	position: relative;
	display: block;
}

.wux-rater__outer {
	position: absolute;
	left: 0;
	top: 0;
	display: block;
	overflow: hidden;
}

.wux-rater__text {
	display: inline-block;
	float: none;
	margin-left: 10px;
	vertical-align: middle;
	font-size: 12px;
}